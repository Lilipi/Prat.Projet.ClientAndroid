<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:visibility="visible"
              android:baselineAligned="true">


    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="false">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
          >

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:weightSum="1">
                <TextView
                    android:id="@+id/name"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:textStyle="bold|italic" android:textColor="#ffc60e" android:autoText="false"
                    android:textSize="30dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:id="@+id/textView"
                        android:textSize="30dp"/>
                <TextView
                        android:id="@+id/prenom"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="center_horizontal"

                        android:textSize="30dp"
                        android:textColor="#ffc60e" android:textStyle="bold|italic"/>
            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Formation"
                    android:textSize="20dp"
                    android:id="@+id/formation" android:textColor="#ba0bff" android:textStyle="bold"/>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:id="@+id/scroll"
                    >
            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Expériences"
                    android:textSize="20dp"
                    android:id="@id/experiences" android:textStyle="bold" android:textColor="#ba0bff"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:id="@id/listExperience">
            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compétences"
                    android:textSize="20dp"
                    android:id="@+id/competence" android:textColor="#ba0bff" android:textStyle="bold"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:id="@id/listCompetence">
            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Langues"
                    android:textSize="20dp"
                    android:id="@+id/langue" android:textStyle="bold"
                    android:textColor="#ba0bff"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:focusableInTouchMode="false"
                    android:id="@id/listLangue">
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>